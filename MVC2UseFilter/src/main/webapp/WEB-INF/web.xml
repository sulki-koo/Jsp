<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd" id="WebApp_ID" version="5.0">
  <display-name>MVC2UseFilter</display-name>
  
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
    <servlet>
  	<servlet-name>MVC2Controller</servlet-name>
  	<servlet-class>controller.MVC2Controller</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>MVC2Controller</servlet-name>
  	<url-pattern>*.do</url-pattern>
  </servlet-mapping>
  
  <filter>
  	<filter-name>MVC2Filter</filter-name>
 	<filter-class>controller.MVC2Filter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>MVC2Filter</filter-name>
  	<url-pattern>*.do</url-pattern>
  </filter-mapping>
  
</web-app>